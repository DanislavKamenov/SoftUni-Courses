{{> header}}
<div class="content">
    {{> navigation}}
    <section id="viewComments">
        <div class="post">
            <div class="col thumbnail">
                <a href="{{post.url}}">
                    <img src="{{post.imageUrl}}">
                </a>
            </div>
            <div class="post-content">
                <div class="title">
                    <a href="{{post.url}}">
                        {{post.title}}
                    </a>
                </div>
                <div class="details">
                    <p>{{post.description}}</p>
                    <div class="info">
                        submitted {{post.time}} ago by {{post.author}}
                    </div>
                    {{#if post.isAuthor}}
                        <div class="controls">
                            <ul>
                                <li class="action"><a class="editLink" href="#/post/edit/:{{post._id}}">edit</a></li>
                                <li class="action"><a class="deleteLink" href="#/post/delete/:{{post._id}}">delete</a>
                                </li>
                            </ul>
                        </div>
                    {{/if}}
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="post post-content">
            <form id="commentForm" action="#/post/comments/:{{post._id}}" method="post">
                <label>Comment</label>
                <textarea name="content" type="text"></textarea>
                <input type="submit" value="Add Comment" id="btnPostComment">
            </form>
        </div>
        {{#if comments}}
            {{#each comments}}
                {{> comment}}
            {{/each}}
        {{else}}
            <span class="post post-content">No comments in database.</span>
        {{/if}}
    </section>
</div>
{{footer}}