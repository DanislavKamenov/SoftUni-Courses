<section id="view{{action}}Ad" class="view{{action}}Ad">
    <h1 class="titleForm">{{action}} {{type}} Advertisement</h1>
    <form id="form{{action}}Ad" class="form">
        <div><input type ="hidden" name="id" required value="{{ad._id}}" /></div>
        <div>Title:</div>
        <div><input type="text" name="title" required value="{{ad.title}}" /></div>
        <div>Description:</div>
        <div><textarea name="description" rows="10" required>{{ad.description}}</textarea></div>
        <div>Date Published:</div>
        <div><input type="date" name="datePublished" required value="{{ad.datePublished}}"/></div>
        <div>Price:</div>
        <div><input type="number" step="0.01" name="price" required value="{{ad.price}}"/></div>
        <div>Image URL:</div>
        <div><input type="text" name="image" required value="{{ad.image}}"/></div>
        <div><input type="button" id="button{{action}}Ad" value="{{action}}" /></div>
    </form>
</section>