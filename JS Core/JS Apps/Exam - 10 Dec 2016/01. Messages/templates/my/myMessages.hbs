{{> header}}
<main>
    <section id="viewMyMessages">
        <h1>My Messages</h1>
        <div class="messages" id="myMessages">
            <table>
                <thead>
                <tr>
                    <th>From</th>
                    <th>Message</th>
                    <th>Date Received</th>
                </tr>
                </thead>
                {{#if messages}}
                    <tbody>
                    {{#each messages}}
                        {{> message}}
                    {{/each}}
                    </tbody>
                {{/if}}
            </table>
        </div>
    </section>
</main>
{{> footer}}