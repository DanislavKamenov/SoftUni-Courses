<div class="col-md-4">
  <div class="login-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Register</h3>
    </div>
    <div class="panel-body">
      <form role="form" action="/user/register" method="post">
        <fieldset>
          <div class="form-group">
            <input class="form-control" placeholder="Username" name="username" value="{{username}}" type="text" autofocus=""/>
          </div>
          <div class="form-group">
            <input class="form-control" placeholder="Password" name="password" type="password" value=""/>
          </div>
          <div class="form-group">
            <input class="form-control" placeholder="Repeat Password" name="repeatPassword" type="password" value=""/>
          </div>
          <div class="form-group">
            <input class="form-control" placeholder="First Name" name="firstName" value="{{firstName}}" type="text"/>
          </div>
          <div class="form-group">
            <input class="form-control" placeholder="Last Name" name="lastName" value="{{lastName}}" type="text"/>
          </div>
          <div class="form-group">
            <input class="form-control" placeholder="Age" name="age" value="{{age}}" type="number"/>
          </div>
          <input class="btn btn-sm btn-success" type="submit" value="Register"/>
        </fieldset>
      </form>
    </div>
  </div>
</div><br/>